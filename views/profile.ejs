<link rel="stylesheet" href="/css/main.css" />

<link rel="stylesheet" href="/css/profile.css" />


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<%- include('partials/header') %>

<div class="profile-container">
  <div class="left">
    <img src="<%= userData.profilePic %>" alt="Logo" class="logo" />
  </div>

  <div class="right">
    <div class="top-section">
      <h1><%= userData.profileName %></h1>
      <button class="btn">Follow</button>
      <button class="btn">Message</button>
      <span class="dots">•••</span>
    </div>

    <div class="stats">
      <span><b><%= userData.postCount %></b> posts</span>
      <span><b><%= userData.followers %></b> followers</span>
      <span><b><%= userData.following %></b> following</span>
    </div>

    <div class="bio">
      <b><%= userData.name %></b> <br />
      <span><%= userData.category %></span> <br />
      <p><%= userData.bio_1 %></p>
      <p><%= userData.bio_2 %></p>
      <p><%= userData.bio_3 %></p>
      <p><%= userData.bio_4 %></p>
      <a href="<%= userData.link %>"><%= userData.link %></a>
      <p><%= userData.bio_5 %></p>
      <p><%= userData.bio_6 %></p>
      <p><%= userData.bio_7 %></p>
    </div>
  </div>
</div>

<div class="post-container">
  <% userData.posts.forEach(post => { %>
    <div class="post">
      <img src="<%= post.image %>" alt="Post">
      <div class="overlay">
        <span><i class="fa-solid fa-heart"></i> <%= post.likes %></span>
        <span><i class="fa-solid fa-comment"></i> <%= post.comments %></span>
      </div>
    </div>
  <% }); %>
</div>


<%- include('partials/footer') %>
